// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Token {
  id      Int    @id @default(autoincrement())
  address String @unique

  assetA     Pair[] @relation("assetA")
  assetB     Pair[] @relation("assetB")
  assetShare Pair[] @relation("assetShare")
}

model Pair {
  id        Int    @id @default(autoincrement())
  address   String @unique
  timestamp BigInt

  assetA       Token @relation("assetA", fields: [assetAId], references: [id])
  assetAId     Int
  assetAAmount Int

  assetB       Token @relation("assetB", fields: [assetBId], references: [id])
  assetBId     Int
  assetBAmount Int

  assetShare       Token @relation("assetShare", fields: [assetShareId], references: [id])
  assetShareId     Int
  assetShareAmount Int
}
