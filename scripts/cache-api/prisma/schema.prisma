// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Token {
  id      Int    @id @default(autoincrement())
  address String

  assetA     Pair[] @relation("assetA")
  assetB     Pair[] @relation("assetB")
  assetShare Pair[] @relation("assetShare")
}

model Pair {
  id        Int    @id @default(autoincrement())
  address   String
  timestamp BigInt

  assetA       Token  @relation("assetA", fields: [assetAId], references: [id])
  assetAId     Int
  assetAAmount BigInt

  assetB       Token  @relation("assetB", fields: [assetBId], references: [id])
  assetBId     Int
  assetBAmount BigInt

  assetShare       Token  @relation("assetShare", fields: [assetShareId], references: [id])
  assetShareId     Int
  assetShareAmount BigInt
}
