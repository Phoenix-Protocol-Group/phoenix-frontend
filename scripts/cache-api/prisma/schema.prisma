// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Token {
  id      Int    @id @default(autoincrement())
  address String

  PairToken PairToken[]
}

model PairToken {
  id     Int @id @default(autoincrement())
  amount Int

  token   Token @relation(fields: [tokenId], references: [id])
  tokenId Int

  assetA     Pair[] @relation("assetA")
  assetB     Pair[] @relation("assetB")
  assetShare Pair[] @relation("assetShare")
}

model Pair {
  id      Int    @id @default(autoincrement())
  address String

  assetA       PairToken @relation("assetA", fields: [assetAId], references: [id])
  assetAId     Int
  assetB       PairToken @relation("assetB", fields: [assetBId], references: [id])
  assetBId     Int
  assetShare   PairToken @relation("assetShare", fields: [assetShareId], references: [id])
  assetShareId Int
}
